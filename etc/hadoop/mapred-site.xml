<configuration>

  <!-- Define MapReduce framework as YARN -->
  <property>
    <name>mapreduce.framework.name</name>
    <value>yarn</value>
  </property>

  <!-- ApplicationMaster environment: where Hadoop installation lives -->
  <!-- Set Hadoop home for ApplicationMaster -->
  <property>
    <name>yarn.app.mapreduce.am.env</name>
    <value>HADOOP_MAPRED_HOME=/opt/hadoop</value>
    <description>Set HADOOP_MAPRED_HOME for the MapReduce ApplicationMaster</description>
  </property>

  <!-- Set Hadoop home for Mapper environment -->
  <property>
    <name>mapreduce.map.env</name>
    <value>HADOOP_MAPRED_HOME=/opt/hadoop</value>
  </property>

  <!-- Set Hadoop home for Reducer environment -->
  <property>
    <name>mapreduce.reduce.env</name>
    <value>HADOOP_MAPRED_HOME=/opt/hadoop</value>
  </property>

<!-- JobHistory server RPC address (required so clients can fetch job reports) -->
  <property>
    <name>mapreduce.jobhistory.address</name>
    <value>master:10020</value>
  </property>

  <!-- JobHistory server web UI address -->
  <property>
    <name>mapreduce.jobhistory.webapp.address</name>
    <value>master:19888</value>
  </property>

  <!-- Optional: turn history cleaner on -->
  <property>
    <name>mapreduce.jobhistory.cleaner.enable</name>
    <value>true</value>
  </property>

</configuration>


<configuration>

  <!-- Define the default filesystem for the Hadoop cluster -->
  <property>
    <name>fs.defaultFS</name>
    <value>hdfs://master:9000</value>
    <description>The NameNode URI â€” 'master' is the hostname of Aditya's machine.</description>
  </property>

  <!-- Hadoop temporary working directory -->
  <property>
    <name>hadoop.tmp.dir</name>
    <value>/home/thanos/hadoopdata/tmp</value>
    <description>Base temporary directory used by Hadoop on each node.</description>
  </property>

  <!-- Enable automatic permission handling (optional but useful in multiuser setups) -->
  <property>
    <name>hadoop.http.staticuser.user</name>
    <value>thanos</value>
  </property>

</configuration>

